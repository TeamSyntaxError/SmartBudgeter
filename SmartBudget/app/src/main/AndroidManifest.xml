<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.syntaxerror.smartbudget">

    <application
            android:name=".config.MyApplication"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <meta-data android:name="AA_DB_NAME" android:value="SmartBudget.db" />
        <meta-data android:name="AA_DB_VERSION" android:value="1" />
        <meta-data
                android:name="AA_MODELS"
                android:value="com.syntaxerror.smartbudget.model.budgetInfo" />

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".NewBudget">
        </activity>
        <activity android:name=".login">
        </activity>
        <activity android:name=".Signup">
        </activity>
        <activity android:name=".MyStatus">
        </activity>
    </application>

</manifest>