<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.syntaxerror.smartbudget.MyStatus">


    <LinearLayout
            android:id="@+id/linearLayout2"
            android:padding="8dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/linearLayout1">
        <TextView
                android:text="Available Cash :"
                android:textSize="16dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/acashTextView" android:layout_weight="1"/>
        <TextView
                android:text="2000 LKR"
                android:textSize="16dp"
                android:background="@color/colorPrimaryDark"
                android:textColor="@color/colorWhite"
                android:textAlignment="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/cashTextView1" android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="53dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="24dp"
            android:id="@+id/linearLayout1" app:layout_constraintHorizontal_bias="0.0">
        <ImageView
                android:clickable="true"
                android:layout_width="73dp"
                android:layout_height="match_parent" app:srcCompat="@android:drawable/ic_menu_revert"
                android:id="@+id/backImageView" android:layout_weight="1"/>
        <TextView
                android:text="Syntax Error"
                android:textAlignment="center"
                android:textSize="36sp"
                android:layout_width="320dp"
                android:layout_height="match_parent" android:id="@+id/userNameTextView" android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
            android:id="@+id/linearLayout3"
            android:padding="8dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/linearLayout2">
        <TextView
                android:text="Total Income : "
                android:textSize="16dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/totalincomeTextView" android:layout_weight="1"/>
        <TextView
                android:text="4000 LKR"
                android:textSize="16dp"
                android:background="@color/colorPrimaryDark"
                android:textColor="@color/colorWhite"
                android:textAlignment="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/cashTextView2" android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
            android:id="@+id/linearLayout4"
            android:padding="8dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3">
        <TextView
                android:text="Total Expenses :"
                android:textSize="16dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/totalexpensesTextView" android:layout_weight="1"/>
        <TextView
                android:text="6000 LKR"
                android:textSize="16dp"
                android:background="@color/colorPrimaryDark"
                android:textColor="@color/colorWhite"
                android:textAlignment="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/cashTextView3" android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/linearLayout5"
            android:padding="8dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/linearLayout4"
    >
        <TextView
                android:text="Total Debts :"
                android:textSize="16dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/totaldebtsTextView" android:layout_weight="1"/>
        <TextView
                android:text="100 LKR"
                android:textSize="16dp"
                android:background="@color/colorPrimaryDark"
                android:textColor="@color/colorWhite"
                android:textAlignment="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/cashTextView4" android:layout_weight="1"/>
    </LinearLayout>
    <TextView
            android:text="Budgets In Process"
            android:textAlignment="center"
            android:background="@color/colorPrimaryDark"
            android:textColor="@color/colorWhite"
            android:textSize="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/budgetsTitleTextView"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintBottom_toTopOf="@+id/budgetslistView"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/linearLayout5"/>
    <ListView
            android:layout_width="395dp"
            android:layout_height="212dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/budgetslistView" android:layout_marginStart="16dp"/>
</android.support.constraint.ConstraintLayout>