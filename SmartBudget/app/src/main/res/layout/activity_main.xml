<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.syntaxerror.smartbudget.MainActivity">


    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="53dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
            android:id="@+id/linearLayout3"
    >
        <ImageView
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" app:srcCompat="@mipmap/ic_launcher_round"
                android:id="@+id/imageView3" android:layout_weight="1"/>
        <TextView
                android:text="R.Ramakrishnan"
                android:textSize="36sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/nameOfBudgetText" android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="40dp"
            android:id="@+id/linearLayout4" app:layout_constraintEnd_toEndOf="@+id/linearLayout3"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="@+id/linearLayout3" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/linearLayout2">
        <Button
                android:text="My Status"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/mystatusbutton"/>
        <Button
                android:text="New Budget"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/newbudgetbutton"/>
        <Button
                android:text="View Budget"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/viewbudgetbutton"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="308dp"
            android:layout_height= "wrap_content" android:layout_marginBottom="56dp"
            app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/linearLayout2"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp">
        <TextView
                android:text="Available Cash"
                android:textSize="32dp"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:layout_height="wrap_content" android:id="@+id/textView"/>
        <TextView
                android:text="2000"
                android:padding="5dp"
                android:textSize="32dp"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:layout_height="wrap_content" android:id="@+id/textView6"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
