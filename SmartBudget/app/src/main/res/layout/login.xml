<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <TextView
            android:text="Login"
            android:textSize="36dp"
            android:textAlignment="center"
            android:layout_width="307dp"
            android:layout_height="59dp" android:id="@+id/loginTextView"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.507" android:layout_weight="1"/>
    <EditText
            android:hint="Email Address"
            android:layout_width="304dp"
            android:layout_height="61dp"
            android:layout_marginHorizontal="16dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/emailEditView"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/loginTextView"
            android:layout_weight="1" app:layout_constraintEnd_toEndOf="@+id/loginTextView"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="@+id/loginTextView"
            app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:hint="Password"
            android:layout_width="321dp"
            android:layout_height="53dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/passwordEditView"
            android:layout_weight="1"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/emailEditView"
            app:layout_constraintStart_toStartOf="@+id/emailEditView" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="@+id/emailEditView"/>
    <Button
            android:text="LOGIN"
            android:layout_width="338dp"
            android:layout_height="41dp" android:id="@+id/loginbutton"
            android:layout_weight="1" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/passwordEditView"
            app:layout_constraintStart_toStartOf="@+id/passwordEditView" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="@+id/passwordEditView" app:layout_constraintHorizontal_bias="0.76"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="32dp">
        <TextView
                android:text="SignUp Now"
                android:clickable="true"
                android:textSize="20dp"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/signupTextView" android:layout_weight="1"/>
        <TextView
                android:text="Forget Password"
                android:clickable="true"
                android:textSize="20dp"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/forgetTextView" android:layout_weight="1"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>